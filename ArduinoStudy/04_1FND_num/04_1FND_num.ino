void setup() {
  for(byte i = 2; i < 10 ; i++)  {
    pinMode(i, OUTPUT);
    digitalWrite(i, LOW);  // OFF
  }
}

void loop() {
   for (byte num = 0; num < 16; num++) {
    displayFND(num);
    delay(500);
  }
}

void displayFND(byte num)  {
  for(byte i = 2 ; i < 10 ; i++)  {
    digitalWrite(i, digitsCA[num][i-2]);
  }
}
